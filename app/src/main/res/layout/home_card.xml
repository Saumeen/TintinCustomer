<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"


    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id="@+id/menu_card_view_menucard"
        android:layout_gravity="top"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="5dp"
        card_view:cardBackgroundColor="@color/cardview_shadow_start_color"
        card_view:cardCornerRadius="4dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/homecard_suppliername"
                android:layout_width="371dp"
                android:layout_height="35dp"
                android:layout_alignEnd="@+id/homecard_cost"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="7dp"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="21dp"
                android:layout_marginBottom="154dp"
                android:fontFamily="serif"
                android:hint="supplier name" />


            <TextView
                android:id="@+id/homecard_menu"
                android:layout_width="391dp"
                android:layout_height="37dp"
                android:layout_alignEnd="@+id/homecard_cost"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="49dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="114dp"
                android:fontFamily="serif"
                android:hint="Menu" />


            <TextView
                android:id="@+id/homecard_cost"
                android:layout_width="400dp"
                android:layout_height="37dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="8dp"
                android:layout_marginTop="95dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="68dp"
                android:fontFamily="serif"
                android:hint="cost" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="41dp"

                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="260dp"
                android:layout_marginTop="134dp"
                android:layout_marginEnd="89dp"
                android:layout_marginBottom="25dp"
                android:src="@drawable/ic_add_black_24dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>