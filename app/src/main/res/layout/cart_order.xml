<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="203dp">

            <TextView
                android:id="@+id/menudatacard_type"
                android:layout_width="383dp"
                android:layout_height="38dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="14dp"
                android:layout_marginTop="21dp"
                android:text="Type" />

            <TextView
                android:id="@+id/menudatacard_menu"
                android:layout_width="383dp"
                android:layout_height="38dp"
                android:layout_below="@+id/menudatacard_type"
                android:layout_alignParentStart="true"
                android:layout_marginStart="14dp"
                android:layout_marginTop="2dp"
                android:text="Menu" />

            <TextView
                android:id="@+id/menudatacard_cost"
                android:layout_width="383dp"
                android:layout_height="38dp"
                android:layout_below="@+id/menudatacard_menu"
                android:layout_alignParentStart="true"
                android:layout_marginStart="14dp"
                android:layout_marginTop="8dp"
                android:text="Cost" />

            <Button
                android:id="@+id/menudatacard_remove"
                android:layout_width="118dp"
                android:text="Remove"
                android:layout_height="wrap_content"
                android:layout_below="@+id/menudatacard_cost"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="262dp"
                android:layout_marginTop="3dp"
                android:layout_marginEnd="31dp" />

            <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                android:id="@+id/number_button"
                android:layout_width="124dp"
                android:layout_height="37dp"
                android:layout_below="@+id/menudatacard_cost"
                android:layout_alignParentStart="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="14dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="31dp"
                app:backGroundColor="@color/colorAccent"
                app:finalNumber="20"
                app:initialNumber="1"
                app:textSize="6sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>